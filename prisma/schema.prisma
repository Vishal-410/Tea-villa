// schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  email        String      @unique
  firstName    String
  lastName     String
  phone        String      @unique // Changed to String to store phone numbers as text
  password     String
  otp          String?
  otpExpiresAt DateTime?
  token        UserToken[]
}

model UserToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ContactUs {
  id      Int    @id @default(autoincrement())
  name    String
  phone   String
  email   String
  message String
}



model HomePageContent {
  id         Int         @id @default(autoincrement())
  image      String
  heading    String
  paragraphs Paragraph[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Paragraph {
  id        Int      @id @default(autoincrement())
  text      String
  content   HomePageContent  @relation(fields: [contentId], references: [id])
  contentId Int
}

